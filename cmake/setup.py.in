#!/usr/bin/python
# -*- coding: utf-8 -*-

from distutils.core import setup
from distutils.command.build_py import build_py
from distutils.extension import Extension

class version_build_py(build_py):
    """Specialized Python source builder."""

    def run(self):
        # honor the --dry-run flag
        if not self.dry_run:
            with open('@CMAKE_CURRENT_SOURCE_DIR@/manager/rozofs/__init__.py', 'w') as f:
                f.write('__version__ = \"@VERSION@\"\n')
                f.write('__sysconfdir__ = \"@SYSCONFDIR@\"\n')

        # distutils uses old-style classes, so no super()
        build_py.run(self)


setup(
    cmdclass={'build_py': version_build_py},
    name='rozofs-manager',
    version='@VERSION@',
    author='Fizians S.A.S.',
    author_email='devel@rozofs.com',
    url='http://www.fizians.com/',
    description='RozoFS platform management tools',
    license='Copyright Fizians S.A.S.',
    packages=['rozofs', 'rozofs.ext', 'rozofs.core', 'rozofs.cli', 'rozofs.www'],
    package_dir={'rozofs': '@CMAKE_CURRENT_SOURCE_DIR@/manager/rozofs',
                 'rozofs.ext': '@CMAKE_CURRENT_SOURCE_DIR@/manager/rozofs/ext',
                 'rozofs.core': '@CMAKE_CURRENT_SOURCE_DIR@/manager/rozofs/core',
                 'rozofs.cli': '@CMAKE_CURRENT_SOURCE_DIR@/manager/rozofs/cli',
                 'rozofs.www': '@CMAKE_CURRENT_SOURCE_DIR@/manager/rozofs/www'},
    package_data={'rozofs.www': ['templates/*.*',
                                'static/*.*',
                                'static/easyui/*.*',
                                'static/easyui/plugins/*.*',
                                'static/easyui/locale/*.*',
                                'static/easyui/themes/*.*',
                                'static/easyui/themes/black/*.*',
                                'static/easyui/themes/black/images/*.*',
                                'static/easyui/themes/metro/*.*',
                                'static/easyui/themes/metro/images/*.*',
                                'static/easyui/themes/icons/*.*',
                                'static/easyui/themes/default/*.*',
                                'static/easyui/themes/default/images/*.*',
                                'static/easyui/themes/bootstrap/*.*',
                                'static/easyui/themes/bootstrap/images/*.*',
                                'static/easyui/themes/gray/*.*',
                                'static/easyui/themes/gray/images/*.*',
                                'static/highcharts/*.*',
								'static/highcharts/adapters/*.*',
								'static/highcharts/themes/*.*',
								'static/highcharts/modules/*.*'
                                ]},
    ext_modules=[Extension('rozofs.core._libconfig', ['@CMAKE_CURRENT_SOURCE_DIR@/manager/rozofs/core/libconfig.i'],
                           swig_opts=['-I/usr/include'],
                           libraries=['config']),
                   ],
    scripts=['@CMAKE_CURRENT_SOURCE_DIR@/manager/bin/rozo'],
)
