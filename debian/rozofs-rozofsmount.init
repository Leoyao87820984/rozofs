#! /bin/sh
### BEGIN INIT INFO
# Provides:          rozofs-rozofsmount
# Required-Start:    $network $local_fs
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Mount all filesystems.
# Description:
### END INIT INFO

# Author: Fizians S.A.S. <devel@rozofs.com>

PATH=/sbin:/bin
DESC=rozofsmount             # Introduce a short description here
NAME=rozofsmount             # Introduce the short server's name here
DAEMON=/bin/mount.rozofs  # Introduce the server's location here
DAEMON_ARGS=""             # Arguments to run the daemon with
SCRIPTNAME=/etc/init.d/$NAME

. /lib/init/vars.sh

. /lib/lsb/init-functions

SCRIPTNAME=/etc/init.d/$NAME

# Exit if the package is not installed
#[ -x $DAEMON ] || exit 0

# Read configuration variable file if it is present
[ -r /etc/default/$NAME ] && . /etc/default/$NAME

# Load the VERBOSE setting and other rcS variables
. /lib/init/vars.sh

# Define LSB log_* functions.
# Depend on lsb-base (>= 3.0-6) to ensure that this file is present.
. /lib/lsb/init-functions

# Enable core files
ulimit -c unlimited

#
# Function that starts the daemon/service
#
do_start()
{
        [ -f /etc/fstab ] || return
        mount -a -t rozofs
}

do_stop()
{
        [ -f /etc/fstab ] || return
        #
        # Read through fstab line by line. If it is ROZOFS, mount it
        #

        exec 9<&0 </etc/fstab

        while read DEV MTPT FSTYPE OPTS REST
        do
        case "$DEV" in
            ""|\#*)
                continue;
                ;;
            "rozofsmount")
                umount $MTPT
                ;;
        esac
        done

        exec 0<&9 9<&-
}

case "$1" in
  start)
    [ "$VERBOSE" != no ] && log_daemon_msg "Starting $DESC " "$NAME"
    do_start
  ;;
  stop)
    do_stop
  ;;
  status|reload|restart|force-reload)
       echo "Error: argument '$1' not supported" >&2
       exit 3
       ;;

  *)
        echo "Usage: $SCRIPTNAME {start|stop}" >&2
        exit 3
        ;;
esac

: exit 0
